      "item": [
        {
          "name": "Post Sales & Expenses (Auto-aggregates)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"salesmanAlias\": \"JOHN_DOE\",\n  \"date\": \"2024-02-23\",\n  \"expenses\": [\n    {\n      \"category\": \"Petrol\",\n      \"amount\": 500.00,\n      \"expenseDate\": \"2024-02-23\"\n    },\n    {\n      \"category\": \"Food\",\n      \"amount\": 300.00,\n      \"expenseDate\": \"2024-02-23\"\n    },\n    {\n      \"category\": \"Mobile\",\n      \"amount\": 200.00,\n      \"expenseDate\": \"2024-02-23\"\n    }\n  ],\n  \"dailySales\": [\n    {\n      \"slNo\": 1,\n      \"saleDate\": \"2024-02-23\",\n      \"customerName\": \"ABC Shop\",\n      \"customerType\": \"CUSTOMER\",\n      \"village\": \"Bangalore\",\n      \"mobileNumber\": \"9876543210\",\n      \"productCode\": \"PROD001\",\n      \"quantity\": 5,\n      \"rate\": 100.00\n    }\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/sales/sales-expense",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "sales",
                "sales-expense"
              ]
            },
            "description": "Post sales with expenses. Automatically aggregates expenses in daily_expense_record table.\n\nExpenses are summed: 500 + 300 + 200 = 1000.00\n\nAutomatically creates/updates daily_expense_record:\n{\n  \"salesmanAlias\": \"JOHN_DOE\",\n  \"expenseDate\": \"2024-02-23\",\n  \"totalExpense\": 1000.00\n}"
